{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "dotenv -- turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:migrate": "prisma migrate dev --schema=packages/prisma/prisma/schema.prisma",
    "db:generate": "prisma generate --schema=packages/prisma/prisma/schema.prisma",
    "db:push": "prisma db push --schema=packages/prisma/prisma/schema.prisma"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "dotenv-cli": "^10.0.0",
    "prettier": "^3.6.2",
    "prisma": "^6.15.0",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "better-auth": "^1.3.7",
    "zod": "^3.25.76"
  }
}
